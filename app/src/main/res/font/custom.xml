<?xml version="1.0" encoding="utf-8"?>
<font-family
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--light-->
    <font
        android:font="@font/ubuntulight"
        android:fontStyle="normal"
        android:fontWeight="100"
        app:font="@font/ubuntulight"
        app:fontStyle="normal"
        app:fontWeight="200" />
    <!--regular-->
    <font
        android:font="@font/ubuntumedium"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/ubuntumedium"
        app:fontStyle="normal"
        app:fontWeight="400" />
    <!--regular-->
    <font
        android:font="@font/ubunturegular"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/ubunturegular"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <!--bold-->
    <font
        android:font="@font/ubuntubold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/ubuntubold"
        app:fontStyle="normal"
        app:fontWeight="1000" />
</font-family>